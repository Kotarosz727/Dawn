<section>
  <div style='text-align:center'>
  　　　<h3>{{ section.settings.title | escape }}</h3>
      <p>{{ section.settings.text }}</p>
  </div>
</section>

{% schema %}
{
  "name": "サンプル",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "見出し",
      "default": "近日中にセール公開"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "テキスト",
      "default": "テスト"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "画像"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "ボタンリンク"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "ボタンラベル",
      "default": "ボタン"
    }
  ],
  "presets": [
    {
      "name": "サンプル",
      "category": "講座用（基本編）"
    }
  ]
}
{% endschema %}